<?xml version="1.0" encoding="GB2312"?>
<ui>
	<view>
		<container>
			<layout type="linearLayout" />
			<editProperty>
				<dataDefines>	
					<dataDefine name="icon0" type="image" isNull="true"  description="" propertyName="┏图标1(宽60,高60)" />
					<dataDefine name="ms0" type="text" isNull="true" max="8" contentSize="8" description="" propertyName="┗文字1(简短)" />
					<dataDefine name="icon1" type="image" isNull="true"  description="" propertyName="┏图标2(宽60,高60)" />
					<dataDefine name="ms1" type="text" isNull="true" max="8" contentSize="8" description="" propertyName="┗文字2(简短)" />
					<dataDefine name="icon2" type="image" isNull="true"  description="" propertyName="┏图标3(宽60,高60)" />
					<dataDefine name="ms2" type="text" isNull="true" max="8" contentSize="8" description="" propertyName="┗文字3(简短)" />
					<dataDefine name="sm" type="text" description="简短"  max="30" contentSize="30" propertyName="店铺描述" isNull="true" />
					<dataDefine name="allUrl" type="url" description="请输入跳转页面url" validateType="taokeurl||wirelessurl" propertyName="全部宝贝链接" isNull="true" />
					<dataDefine name="scUrl" type="url" description="请输入跳转页面url" validateType="taokeurl||wirelessurl" propertyName="店铺收藏链接" isNull="true" />

					<dataDefine name="mk_style" type="radio"  isNull="true" propertyName="★ 自定义模块样式" >
			            <config type="sync">
			              <data text="收起设置" value="false" defaultSelect="true"/>
			              <data text="展开设置" value="true" defaultSelect="false"/>
			            </config>
			        </dataDefine>
			        <dataDefine name="mkBg" type="text"   max="10" contentSize="10" isNull="true"  propertyName="模块背景颜色(如：#ffffff)" description="色值" refer="mk_style:true"/>
 					<dataDefine name="msColor" type="text"   max="10" contentSize="10" isNull="true"  propertyName="图标文字颜色(如：#ffffff)" description="色值" refer="mk_style:true"/>
					<dataDefine name="smBg" type="text"  max="10" contentSize="10" isNull="true"  propertyName="店铺描述背景颜色(如：#ffffff)" description="色值" refer="mk_style:true"/>
					<dataDefine name="smColor" type="text"  max="10" contentSize="10" isNull="true"  propertyName="店铺描述文字颜色(如：#ffffff)" description="色值" refer="mk_style:true"/>
					<dataDefine name="btnBg" type="text"  max="10" contentSize="10" isNull="true"  propertyName="按钮背景颜色(如：#ffffff)" description="色值" refer="mk_style:true"/>
					<dataDefine name="btnBk" type="text"  max="10" contentSize="10" isNull="true"  propertyName="按钮边框颜色(如：#ffffff)" description="色值" refer="mk_style:true"/>
					<dataDefine name="btnColor" type="text"  max="10" contentSize="10" isNull="true"  propertyName="按钮文字颜色(如：#ffffff)" description="色值" refer="mk_style:true"/>
				</dataDefines>
			</editProperty>
			<styleBinding>
				<attribute name="width" value="640"/>
				<attribute name="backgroundColor" value="#f5f5f5"/>
				<attribute name="marginBottom" value="0"/>
			</styleBinding>			
			<conditions>
				<condition type="!=" left="$mkBg" right="null">
					<styleBinding backgroundColor="$mkBg"/>
				</condition>
			</conditions>			
			<subViews>	
				<!-- 主题内容-->
				<container>
					<layout type="linearLayout"  orientation="horizontal"/>
					<styleBinding>
						<attribute name="width" value="608"/>
						<attribute name="height" value="60"/>
						<attribute name="marginLeft" value="16"/>
						<attribute name="marginTop" value="30"/>
					</styleBinding>					
					<subViews>
						<!-- 保证图片 -->
						<image url="https://img.alicdn.com/imgextra/i1/800803731/O1CN011dQqAzbR1CJqQAF_!!800803731.png">
							<styleBinding>
								<attribute name="width" value="60"/>
								<attribute name="height" value="60"/>
								<attribute name="marginLeft" value="10"/>
							</styleBinding>
							<conditions>
								<condition type="!=" left="$icon0" right="null" executionType="1">
									<dataBinding>
										<data name="url" value="$icon0"/>
									</dataBinding>
								</condition>
							</conditions>	
						</image>
						<label value="实物拍摄" lines="1">
							<styleBinding>
								<attribute name="height" value="60"/>
								<attribute name="width" value="110"/>
								<attribute name="marginLeft" value="6"/>
								<attribute name="marginRight" value="6"/>
								<attribute name="lineHeight" value="60"/>
								<attribute name="fontSize" value="24"/>
								<attribute name="color" value="#888888"/>
							</styleBinding>
							<conditions>
								<condition type="!=" left="$ms0" right="null" executionType="1">
									<dataBinding>
										<data name="value" value="$ms0"/>
									</dataBinding>
								</condition>
								<condition type="!=" left="$msColor" right="null" executionType="1">
									<styleBinding color="$msColor"/>
								</condition>
							</conditions>
						</label>
						<image url="https://img.alicdn.com/imgextra/i4/800803731/O1CN011dQqAznXxE6tX3C_!!800803731.png">
							<styleBinding>
								<attribute name="width" value="60"/>
								<attribute name="height" value="60"/>
							</styleBinding>
							<conditions>
								<condition type="!=" left="$icon1" right="null" executionType="1">
									<dataBinding>
										<data name="url" value="$icon1"/>
									</dataBinding>
								</condition>
							</conditions>	
						</image>
						<label value="24小时发货" lines="1">
							<styleBinding>
								<attribute name="height" value="60"/>
								<attribute name="width" value="140"/>
								<attribute name="marginLeft" value="6"/>
								<attribute name="marginRight" value="6"/>
								<attribute name="lineHeight" value="60"/>
								<attribute name="fontSize" value="24"/>
								<attribute name="color" value="#888888"/>
							</styleBinding>
							<conditions>
								<condition type="!=" left="$ms1" right="null" executionType="1">
									<dataBinding>
										<data name="value" value="$ms1"/>
									</dataBinding>
								</condition>
								<condition type="!=" left="$msColor" right="null" executionType="1">
									<styleBinding color="$msColor"/>
								</condition>
							</conditions>
						</label>
						<image url="https://img.alicdn.com/imgextra/i1/800803731/O1CN011dQqB0st1P72WuG_!!800803731.png">
							<styleBinding>
								<attribute name="width" value="60"/>
								<attribute name="height" value="60"/>
							</styleBinding>
							<conditions>
								<condition type="!=" left="$icon2" right="null" executionType="1">
									<dataBinding>
										<data name="url" value="$icon2"/>
									</dataBinding>
								</condition>
							</conditions>	
						</image>
						<label value="满88元包邮" lines="1">
							<styleBinding>
								<attribute name="height" value="60"/>
								<attribute name="width" value="140"/>
								<attribute name="marginLeft" value="6"/>
								<attribute name="marginRight" value="6"/>
								<attribute name="lineHeight" value="60"/>
								<attribute name="fontSize" value="24"/>
								<attribute name="color" value="#888888"/>
							</styleBinding>
							<conditions>
								<condition type="!=" left="$ms2" right="null" executionType="1">
									<dataBinding>
										<data name="value" value="$ms2"/>
									</dataBinding>
								</condition>
								<condition type="!=" left="$msColor" right="null" executionType="1">
									<styleBinding color="$msColor"/>
								</condition>
							</conditions>
						</label>
					</subViews>
				</container>
				<label value="线上8年 专注品质生活家居百货！" lines="1">
					<styleBinding>
						<attribute name="height" value="50"/>
						<attribute name="width" value="608"/>
						<attribute name="marginLeft" value="16"/>
						<attribute name="marginTop" value="16"/>
						<attribute name="textAlign" value="center"/>
						<attribute name="lineHeight" value="50"/>
						<attribute name="fontSize" value="26"/>
						<attribute name="color" value="#ffffff"/>
						<attribute name="backgroundColor" value="#444444"/>
						<attribute name="borderRadius" value="25"/>
					</styleBinding>
					<conditions>
						<condition type="!=" left="$sm" right="null" executionType="1">
							<dataBinding>
								<data name="value" value="$sm"/>
							</dataBinding>
						</condition>
						<condition type="!=" left="$smColor" right="null" executionType="1">
							<styleBinding color="$smColor"/>
						</condition>
						<condition type="!=" left="$smBg" right="null">
							<styleBinding backgroundColor="$smBg"/>
						</condition>								
					</conditions>
				</label>

				<container>
					<layout type="absoluteLayout"/>
					<styleBinding>
						<attribute name="width" value="640"/>
						<attribute name="height" value="90"/>
					</styleBinding>					
					<subViews>
						<label value="所有宝贝" lines="1">
							<styleBinding>
								<attribute name="height" value="40"/>
								<attribute name="width" value="120"/>
								<attribute name="marginLeft" value="190"/>
								<attribute name="marginTop" value="25"/>
								<attribute name="textAlign" value="center"/>
								<attribute name="lineHeight" value="40"/>
								<attribute name="fontSize" value="22"/>
								<attribute name="fontWeight" value="700"/>
								<attribute name="color" value="#444444"/>
								<attribute name="backgroundColor" value="#ffffff"/>
								<attribute name="borderWidth" value="1"/>
								<attribute name="borderColor" value="#888888"/>
								<attribute name="borderRadius" value="16"/>
							</styleBinding>
							<conditions>
								<condition type="!=" left="$btnBg" right="null" executionType="1">
									<styleBinding backgroundColor="$btnBg"/>
								</condition>
								<condition type="!=" left="$btnBk" right="null" executionType="1">
									<styleBinding borderColor="$btnBk"/>
								</condition>
								<condition type="!=" left="$btnColor" right="null" executionType="1">
									<styleBinding color="$btnColor"/>
								</condition>
							</conditions>
							<events>
								<event type="click">
									<actions>
										<userTrack  utType="Lable" utName="label">
											<utParams>
												<params>
													<param name="wp_p" value="1"/>
												</params>
											</utParams>
										</userTrack>
										<openURL url="$allUrl"/>
									</actions>
								</event>
							</events>	
						</label>
						<label value="店铺收藏" lines="1">
							<styleBinding>
								<attribute name="height" value="40"/>
								<attribute name="width" value="120"/>
								<attribute name="marginLeft" value="330"/>
								<attribute name="marginTop" value="25"/>
								<attribute name="textAlign" value="center"/>
								<attribute name="lineHeight" value="40"/>
								<attribute name="fontSize" value="22"/>
								<attribute name="fontWeight" value="700"/>
								<attribute name="color" value="#444444"/>
								<attribute name="backgroundColor" value="#ffffff"/>
								<attribute name="borderWidth" value="1"/>
								<attribute name="borderColor" value="#888888"/>
								<attribute name="borderRadius" value="16"/>
							</styleBinding>
							<conditions>
								<condition type="!=" left="$btnBg" right="null" executionType="1">
									<styleBinding backgroundColor="$btnBg"/>
								</condition>
								<condition type="!=" left="$btnBk" right="null" executionType="1">
									<styleBinding borderColor="$btnBk"/>
								</condition>
								<condition type="!=" left="$btnColor" right="null" executionType="1">
									<styleBinding color="$btnColor"/>
								</condition>								
							</conditions>
							<events>
								<event type="click">
									<actions>
										<userTrack  utType="Lable" utName="label">
											<utParams>
												<params>
													<param name="wp_p" value="1"/>
												</params>
											</utParams>
										</userTrack>
										<openURL url="$scUrl"/>
									</actions>
								</event>
							</events>	
						</label>
					</subViews>
				</container>

			</subViews>
		</container>
	</view>
</ui>