<?xml version="1.0" encoding="utf-8"?>

<ui> 
  <view> 
    <container> 
      <layout type="linearLayout"/>  
      <editProperty> 
        <dataDefines> 
          <dataDefine name="lineNum" type="select" isNull="true" propertyName="★ 每行显示几个"> 
            <config type="sync"> 
              <data text="每行4个(图片宽110，高110)" value="4" defaultSelect="true"/>  
              <data text="每行5个(图片宽100，高100)" value="5" defaultSelect="false"/> 
            </config> 
          </dataDefine>  
          <dataDefine name="picRadius" type="radio" isNull="true" propertyName="图片圆角效果"> 
            <config type="sync"> 
              <data text="小圆角" value="1" defaultSelect="false"/>  
              <data text="大圆角" value="2" defaultSelect="false"/>  
              <data text="圆形" value="3" defaultSelect="true"/>  
              <data text="直角" value="0" defaultSelect="false"/> 
            </config> 
          </dataDefine>  
          <dataDefine name="itemArray" type="jsonArray" min="1" max="20" propertyName="内容设置" isNull="true"> 
            <param name="image" type="image" isNull="true" propertyName="┏图片选择"/>  
            <param name="title" type="text" isNull="true" propertyName="┣分类标题"/>  
            <param name="color" type="text" isNull="true" propertyName="┣标题颜色(如：#ffffff)"/>  
            <param name="url" type="url" validateType="taokeurl||wirelessurl" isNull="true" propertyName="┣链接地址"/>  
            <param name="imgUrl" type="text" propertyName="┗图片地址(填写后会显示该图,支持gif)" isNull="true"/> 
          </dataDefine>  
          <dataDefine name="mk_style" type="radio" isNull="true" propertyName="★ 自定义模块样式"> 
            <config type="sync"> 
              <data text="收起设置" value="false" defaultSelect="true"/>  
              <data text="展开设置" value="true" defaultSelect="false"/> 
            </config> 
          </dataDefine>  
          <dataDefine name="mkBg" type="text" isNull="true" propertyName="模块背景颜色(如：#ffffff)" refer="mk_style:true"/>  
          <dataDefine name="bdBg" type="text" isNull="true" propertyName="模块内容背景颜色(如：#ffffff)" refer="mk_style:true"/>  
          <dataDefine name="titleColor" type="text" isNull="true" propertyName="分类标题颜色(如：#ffffff)" refer="mk_style:true"/>  
          <dataDefine name="weight" type="radio" isNull="true" propertyName="分类标题粗细" refer="mk_style:true"> 
            <config type="sync"> 
              <data text="加粗" value="700" defaultSelect="false"/>  
              <data text="不加粗" value="100" defaultSelect="true"/> 
            </config> 
          </dataDefine>  
          <dataDefine name="marginTop" type="text" isNull="true" propertyName="模块上间距(默认0)" refer="mk_style:true"/>  
          <dataDefine name="marginBottom" type="text" isNull="true" propertyName="模块下间距(默认40)" refer="mk_style:true"/> 
        </dataDefines> 
      </editProperty>  
      <styleBinding> 
        <attribute name="width" value="640"/>  
        <attribute name="backgroundColor" value="#f5f5f5"/> 
      </styleBinding>  
      <conditions> 
        <condition type="!=" left="$mkBg" right="null"> 
          <styleBinding backgroundColor="$mkBg"/> 
        </condition> 
      </conditions>  
      <subViews> 
        <!--上间距-->  
        <container> 
          <layout type="linearLayout"/>  
          <styleBinding> 
            <attribute name="width" value="640"/>  
            <attribute name="height" value="0"/> 
          </styleBinding>  
          <conditions> 
            <condition type="!=" left="$marginTop" right="null" executionType="1"> 
              <styleBinding height="$marginTop"/> 
            </condition> 
          </conditions> 
        </container>  
        <container> 
          <layout type="linearLayout"/>  
          <styleBinding> 
            <attribute name="width" value="608"/>  
            <attribute name="marginLeft" value="16"/>  
            <attribute name="paddingTop" value="10"/>  
            <attribute name="paddingBottom" value="30"/>  
            <attribute name="backgroundColor" value="#ffffff"/>  
            <attribute name="borderRadius" value="16"/> 
          </styleBinding>  
          <conditions> 
            <condition type="!=" left="$bdBg" right="null"> 
              <styleBinding backgroundColor="$bdBg"/> 
            </condition> 
          </conditions>  
          <subViews> 
            <!-- 1行4列 -->  
            <grid unScroll="true" gridColumn="4" needDownRefresh="false" needNextPage="false" dataSource="$itemArray"> 
              <styleBinding> 
                <attribute name="width" value="600"/>  
                <attribute name="invisible" value="false"/> 
              </styleBinding>  
              <conditions> 
                <condition type="==" left="$lineNum" right="5"> 
                  <styleBinding width="0" height="0" invisible="true"/> 
                </condition> 
              </conditions>  
              <array value="$itemArray"/>  
              <cell> 
                <container> 
                  <layout type="linearLayout"/>  
                  <styleBinding> 
                    <attribute name="width" value="152"/>  
                    <attribute name="marginTop" value="26"/> 
                  </styleBinding>  
                  <subViews> 
                    <image url="https://img.alicdn.com/imgextra/i2/800803731/O1CN011dQqAqCFjwrQZvL_!!800803731.jpg"> 
                      <styleBinding> 
                        <attribute name="width" value="110"/>  
                        <attribute name="height" value="110"/>  
                        <attribute name="marginLeft" value="21"/> 
                      </styleBinding>  
                      <conditions> 
                        <condition type="!=" left="$itemArray.[?].image" right="null" executionType="1"> 
                          <dataBinding> 
                            <data name="url" value="$itemArray.[?].image"/> 
                          </dataBinding> 
                        </condition>  
                        <condition type="!=" left="$itemArray.[?].imgUrl" right="null" executionType="1"> 
                          <dataBinding> 
                            <data name="url" value="$itemArray.[?].imgUrl"/> 
                          </dataBinding> 
                        </condition>  
                        <condition type="==" left="$picRadius" right="1" executionType="1"> 
                          <styleBinding borderRadius="8"/> 
                        </condition>  
                        <condition type="==" left="$picRadius" right="2" executionType="1"> 
                          <styleBinding borderRadius="16"/> 
                        </condition>  
                        <condition type="==" left="$picRadius" right="3" executionType="1"> 
                          <styleBinding borderRadius="110"/> 
                        </condition>  
                        <condition type="==" left="$picRadius" right="0" executionType="1"> 
                          <styleBinding borderRadius="0"/> 
                        </condition> 
                      </conditions> 
                    </image>  
                    <label value="$itemArray.[?].title" lines="1"> 
                      <styleBinding> 
                        <attribute name="marginTop" value="14"/>  
                        <attribute name="height" value="30"/>  
                        <attribute name="textAlign" value="center"/>  
                        <attribute name="lineHeight" value="30"/>  
                        <attribute name="fontSize" value="22"/>  
                        <attribute name="color" value="#666666"/> 
                      </styleBinding>  
                      <conditions> 
                        <condition type="!=" left="$titleColor" right="null" executionType="1"> 
                          <styleBinding color="$titleColor"/> 
                        </condition>  
                        <condition type="==" left="$weight" right="700" executionType="1"> 
                          <styleBinding fontWeight="700"/> 
                        </condition>  
                        <condition type="!=" left="$itemArray.[?].color" right="null" executionType="1"> 
                          <styleBinding color="$itemArray.[?].color"/> 
                        </condition> 
                      </conditions> 
                    </label> 
                  </subViews>  
                  <events> 
                    <event type="click"> 
                      <actions> 
                        <userTrack> 
                          <utParams> 
                            <params> 
                              <param name="wp_p" value="1"/> 
                            </params> 
                          </utParams> 
                        </userTrack>  
                        <openURL url="$itemArray.[?].url"/> 
                      </actions> 
                    </event> 
                  </events> 
                </container> 
              </cell> 
            </grid>  
            <!-- 1行5列 -->  
            <grid unScroll="true" gridColumn="5" needDownRefresh="false" needNextPage="false" dataSource="$itemArray"> 
              <styleBinding> 
                <attribute name="width" value="0"/>  
                <attribute name="marginLeft" value="4"/>  
                <attribute name="invisible" value="true"/> 
              </styleBinding>  
              <conditions> 
                <condition type="==" left="$lineNum" right="5"> 
                  <styleBinding width="600" invisible="false"/> 
                </condition> 
              </conditions>  
              <array value="$itemArray"/>  
              <cell> 
                <container> 
                  <layout type="linearLayout"/>  
                  <styleBinding> 
                    <attribute name="width" value="120"/>  
                    <attribute name="marginTop" value="26"/> 
                  </styleBinding>  
                  <subViews> 
                    <image url="https://img.alicdn.com/imgextra/i2/800803731/O1CN011dQqAqCFjwrQZvL_!!800803731.jpg"> 
                      <styleBinding> 
                        <attribute name="width" value="100"/>  
                        <attribute name="height" value="100"/>  
                        <attribute name="marginLeft" value="10"/> 
                      </styleBinding>  
                      <conditions> 
                        <condition type="!=" left="$itemArray.[?].image" right="null" executionType="1"> 
                          <dataBinding> 
                            <data name="url" value="$itemArray.[?].image"/> 
                          </dataBinding> 
                        </condition>  
                        <condition type="!=" left="$itemArray.[?].imgUrl" right="null" executionType="1"> 
                          <dataBinding> 
                            <data name="url" value="$itemArray.[?].imgUrl"/> 
                          </dataBinding> 
                        </condition>  
                        <condition type="==" left="$picRadius" right="1" executionType="1"> 
                          <styleBinding borderRadius="8"/> 
                        </condition>  
                        <condition type="==" left="$picRadius" right="2" executionType="1"> 
                          <styleBinding borderRadius="16"/> 
                        </condition>  
                        <condition type="==" left="$picRadius" right="3" executionType="1"> 
                          <styleBinding borderRadius="100"/> 
                        </condition>  
                        <condition type="==" left="$picRadius" right="0" executionType="1"> 
                          <styleBinding borderRadius="0"/> 
                        </condition> 
                      </conditions> 
                    </image>  
                    <label value="$itemArray.[?].title" lines="1"> 
                      <styleBinding> 
                        <attribute name="marginTop" value="14"/>  
                        <attribute name="height" value="30"/>  
                        <attribute name="textAlign" value="center"/>  
                        <attribute name="lineHeight" value="30"/>  
                        <attribute name="fontSize" value="22"/>  
                        <attribute name="color" value="#666666"/> 
                      </styleBinding>  
                      <conditions> 
                        <condition type="!=" left="$titleColor" right="null" executionType="1"> 
                          <styleBinding color="$titleColor"/> 
                        </condition>  
                        <condition type="==" left="$weight" right="700" executionType="1"> 
                          <styleBinding fontWeight="700"/> 
                        </condition>  
                        <condition type="!=" left="$itemArray.[?].color" right="null" executionType="1"> 
                          <styleBinding color="$itemArray.[?].color"/> 
                        </condition> 
                      </conditions> 
                    </label> 
                  </subViews>  
                  <events> 
                    <event type="click"> 
                      <actions> 
                        <userTrack> 
                          <utParams> 
                            <params> 
                              <param name="wp_p" value="1"/> 
                            </params> 
                          </utParams> 
                        </userTrack>  
                        <openURL url="$itemArray.[?].url"/> 
                      </actions> 
                    </event> 
                  </events> 
                </container> 
              </cell> 
            </grid> 
          </subViews> 
        </container>  
        <!--下间距-->  
        <container> 
          <layout type="linearLayout"/>  
          <styleBinding> 
            <attribute name="width" value="640"/>  
            <attribute name="height" value="40"/> 
          </styleBinding>  
          <conditions> 
            <condition type="!=" left="$marginBottom" right="null" executionType="1"> 
              <styleBinding height="$marginBottom"/> 
            </condition> 
          </conditions> 
        </container> 
      </subViews> 
    </container> 
  </view> 
</ui>