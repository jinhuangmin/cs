<?xml version="1.0" encoding="utf-8"?>

<ui> 
  <view> 
    <container> 
      <layout type="linearLayout"/>  
      <editProperty> 
        <dataDefines> 
          <dataDefine name="isScrolltrue" type="radio" isNull="true" propertyName="★ 轮播方式" description="选择一种"> 
            <config type="sync"> 
              <data text="自动轮播" value="true" defaultSelect="true"/>  
              <data text="手指滑动" value="false" defaultSelect="false"/> 
            </config> 
          </dataDefine>  
          <dataDefine name="notArray" type="jsonArray" min="1" max="6" propertyName="公告内容" isNull="true"> 
            <param name="not_text" type="text" description="请输入文字" max="20" contentSize="20" isNull="true" propertyName="┏公告内容"/>  
            <param name="not_url" type="url" description="请输入跳转页面url" validateType="taokeurl||wirelessurl" isNull="true" propertyName="┗链接地址"/> 
          </dataDefine>  
          <dataDefine name="mk_style" type="radio" isNull="true" propertyName="★ 自定义模块样式" description="选择一种"> 
            <config type="sync"> 
              <data text="收起设置" value="true" defaultSelect="true"/>  
              <data text="展开设置" value="false" defaultSelect="false"/> 
            </config> 
          </dataDefine>  
          <dataDefine name="mkBgImg" type="image" width="608" height="80" propertyName="背景图片(宽608，高80)" isNull="true" refer="mk_style:false"/>  
          <dataDefine name="mkBg" type="text" max="10" contentSize="10" isNull="true" propertyName="模块背景颜色(如：#ffffff)" description="" refer="mk_style:false"/>  
          <dataDefine name="not_c" type="text" max="10" contentSize="10" isNull="true" propertyName="公告内容颜色(如：#ffffff)" description="" refer="mk_style:false"/>  
          <dataDefine name="marginTop" type="text" max="10" contentSize="10" isNull="true" propertyName="模块下间距(默认8)" description="" refer="mk_style:false"/>  
          <dataDefine name="marginBottom" type="text" max="10" contentSize="10" isNull="true" propertyName="模块下间距(默认8)" description="" refer="mk_style:false"/> 
        </dataDefines> 
      </editProperty>  
      <styleBinding> 
        <attribute name="width" value="640"/>  
        <attribute name="backgroundColor" value="#f5f5f5"/> 
      </styleBinding>  
      <conditions> 
        <condition type="!=" left="$mkBg" right="null" executionType="1"> 
          <styleBinding backgroundColor="$mkBg"/> 
        </condition> 
      </conditions>  
      <subViews> 
        <!--上间距-->  
        <container> 
          <layout type="linearLayout"/>  
          <styleBinding> 
            <attribute name="width" value="640"/>  
            <attribute name="height" value="8"/> 
          </styleBinding>  
          <conditions> 
            <condition type="!=" left="$marginTop" right="null" executionType="1"> 
              <styleBinding height="$marginTop"/> 
            </condition> 
          </conditions> 
        </container>  
        <!--内容-->  
        <container> 
          <layout type="absoluteLayout"/>  
          <styleBinding> 
            <attribute name="width" value="608"/>  
            <attribute name="height" value="80"/>  
            <attribute name="marginLeft" value="16"/> 
          </styleBinding>  
          <subViews> 
            <!--背景图片-->  
            <container> 
              <layout type="linearLayout" orientation="horizontal"/>  
              <styleBinding> 
                <attribute name="width" value="608"/>  
                <attribute name="height" value="80"/>  
                <attribute name="marginLeft" value="0"/>  
                <attribute name="marginTop" value="0"/> 
              </styleBinding>  
              <subViews> 
                <image url="https://img.alicdn.com/imgextra/i4/800803731/O1CN011dQqAp3SHYg5e8u_!!800803731.png"> 
                  <styleBinding> 
                    <attribute name="width" value="608"/>  
                    <attribute name="height" value="80"/> 
                  </styleBinding>  
                  <conditions> 
                    <condition type="!=" left="$mkBgImg" right="null"> 
                      <dataBinding> 
                        <data name="url" value="$mkBgImg"/> 
                      </dataBinding> 
                    </condition> 
                  </conditions> 
                </image> 
              </subViews> 
            </container>  
            <!--轮播-->  
            <sliderView> 
              <styleBinding> 
                <attribute name="width" value="380"/>  
                <attribute name="height" value="80"/>  
                <attribute name="isPointHide" value="true"/>  
                <attribute name="marginLeft" value="184"/>  
                <attribute name="marginTop" value="0"/> 
              </styleBinding>  
              <conditions> 
                <condition type="==" left="$isScrolltrue" right="true" executionType="1"> 
                  <dataBinding> 
                    <data name="autoScrollEnabled" value="true" type="boolean"/> 
                  </dataBinding> 
                </condition> 
              </conditions>  
              <foreach start="0" step="1"> 
                <array value="$notArray"/>  
                <template> 
                  <container> 
                    <layout type="absoluteLayout"/>  
                    <styleBinding> 
                      <attribute name="width" value="380"/>  
                      <attribute name="height" value="80"/> 
                    </styleBinding>  
                    <subViews> 
                      <label value="$notArray.[?].not_text" lines="1"> 
                        <styleBinding> 
                          <attribute name="width" value="380"/>  
                          <attribute name="height" value="80"/>  
                          <attribute name="lineHeight" value="82"/>  
                          <attribute name="fontSize" value="24"/>  
                          <attribute name="color" value="#31ac8d"/>  
                          <attribute name="marginTop" value="0"/> 
                        </styleBinding>  
                        <conditions> 
                          <condition type="!=" left="$not_c" right="null" executionType="1"> 
                            <styleBinding color="$not_c"/> 
                          </condition> 
                        </conditions> 
                      </label> 
                    </subViews>  
                    <events> 
                      <event type="click"> 
                        <actions> 
                          <userTrack> 
                            <utParams> 
                              <params> 
                                <param name="wp_p" value="1"/> 
                              </params> 
                            </utParams> 
                          </userTrack>  
                          <openURL url="$notArray.[?].not_url"/> 
                        </actions> 
                      </event> 
                    </events> 
                  </container> 
                </template> 
              </foreach> 
            </sliderView>  
            <!--轮播end--> 
          </subViews> 
        </container>  
        <!--下间距-->  
        <container> 
          <layout type="linearLayout"/>  
          <styleBinding> 
            <attribute name="width" value="640"/>  
            <attribute name="height" value="8"/> 
          </styleBinding>  
          <conditions> 
            <condition type="!=" left="$marginBottom" right="null" executionType="1"> 
              <styleBinding height="$marginBottom"/> 
            </condition> 
          </conditions> 
        </container> 
      </subViews> 
    </container> 
  </view> 
</ui>