<?xml version="1.0" encoding="GB2312"?>
<ui>
  <view>
    <container>
      <layout type="linearLayout" />
      <editProperty>
        <dataDefines>
          <dataDefine name="wbName" type="text" isNull="true"  propertyName="微博账号"/>
          <dataDefine name="wbLink" type="text" isNull="true"  propertyName="微博无线链接，请咨询客服"/>

          <dataDefine name="wbImg" type="radio"  isNull="true" propertyName="★ 微博图片" >
            <config type="sync">
              <data text="默认图片" value="false" defaultSelect="true"/>
              <data text="自定义图片" value="true" defaultSelect="false"/>
            </config>
          </dataDefine>
          <dataDefine name="pic_h" type="text" isNull="true"  propertyName="图片高度，默认320" refer="wbImg:true"/>
          <dataDefine name="image" type="image" isNull="true" propertyName="图片选择(宽640)" refer="wbImg:true"/>
          <dataDefine name="image2" type="text" isNull="true"  propertyName="图片地址(填写后会显示该图,支持gif)" refer="wbImg:true"/>
        </dataDefines>
      </editProperty>
      <styleBinding>
        <attribute name="width" value="640"/>
        <attribute name="backgroundColor" value="#ffffff"/>
      </styleBinding>
      <subViews>
        <container>
          <layout type="absoluteLayout"/>
          <styleBinding>
            <attribute name="width" value="640"/>
            <attribute name="height" value="320"/>
          </styleBinding>
          <conditions>
            <condition type="!=" left="$pic_h" right="null" executionType="1">
              <styleBinding height="$pic_h"/>
            </condition>
          </conditions>
          <subViews>
            <image url="https://img.alicdn.com/imgextra/i4/800803731/O1CN01bqAJmh1dQqGQ10SCt_!!800803731.jpg">
              <styleBinding>
                <attribute name="width" value="640"/>
                <attribute name="height" value="320"/>
              </styleBinding>
              <conditions>
                <condition type="!=" left="$image" right="null" executionType="1">
                  <dataBinding>
                    <data name="url" value="$image"/>
                  </dataBinding>
                </condition>
                <condition type="!=" left="$image2" right="null" executionType="1">
                  <dataBinding>
                    <data name="url" value="$image2"/>
                  </dataBinding>
                </condition>
                <condition type="!=" left="$pic_h" right="null" executionType="1">
                  <styleBinding height="$pic_h" />
                </condition>
              </conditions>
            </image>
            <label value="$wbName" lines="1">
              <styleBinding>
                <attribute name="width" value="640"/>
                <attribute name="height" value="44"/>
                <attribute name="lineHeight" value="40"/>
                <attribute name="fontSize" value="26"/>
                <attribute name="color" value="#333333"/>
                <attribute name="textAlign" value="center"/>
                <attribute name="marginTop" value="145"/>
                <attribute name="marginLeft" value="0"/>
              </styleBinding>
            </label>
          </subViews>
          <events>
            <event type="click">
              <actions>
                <userTrack>
                  <utParams>
                    <params>
                    <param name="wp_p" value="1"/>
                  </params>
                </utParams>
              </userTrack>
              <openURL url="$wbLink"/>
            </actions>
          </event>
        </events>
      </container>
    </subViews>
  </container>
</view>
</ui>