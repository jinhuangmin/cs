                      <styleBinding>
                        <attribute name="width" value="640"/>
                        <attribute name="height" value="55"/>
                        <attribute name="marginTop" value="75"/>
                        <attribute name="textAlign" value="center"/>
                        <attribute name="lineHeight" value="60"/>
                        <attribute name="fontSize" value="32"/>
                        <attribute name="fontWeight" value="700"/>
                        <attribute name="color" value="#ff0000"/>
                      </styleBinding>
                      <conditions>   
                        <condition type="!=" left="$kcWord1" right="null" executionType="1">
                          <dataBinding>
                            <data name="value" value="$kcWord1"/>
                          </dataBinding>
                        </condition>
                        <condition type="==" left="$kcStyle" right="2" executionType="1">
                          <styleBinding marginTop="60" color="#ff1d2e" fontSize="32"/>
                        </condition> 
                        <condition type="==" left="$kcStyle" right="3" executionType="1">
                          <styleBinding marginTop="130" height="36" lineHeight="36" color="#fffbd4" fontSize="36"/>
                        </condition>
                        <condition type="==" left="$kcStyle" right="4" executionType="1">
                          <styleBinding marginTop="130" height="36" lineHeight="36" color="#d3211c" fontSize="36"/>
                        </condition>        
                      </conditions>
                    </label>
                    <label value="年货节全场有礼" lines="1"> 
                      <styleBinding>
                        <attribute name="width" value="640"/>
                        <attribute name="height" value="60"/>
                        <attribute name="marginTop" value="105"/>
                        <attribute name="textAlign" value="center"/>
                        <attribute name="lineHeight" value="60"/>
                        <attribute name="fontSize" value="32"/>
                        <attribute name="fontWeight" value="700"/>
                        <attribute name="color" value="#ffffff"/>
                      </styleBinding>
                      <conditions>   
                        <condition type="!=" left="$kcWord2" right="null" executionType="1">
                          <dataBinding>
                            <data name="value" value="$kcWord2"/>
                          </dataBinding>
                        </condition>
                        <condition type="==" left="$kcStyle" right="2" executionType="1">
                          <styleBinding marginTop="0" height="30" lineHeight="30" color="#ff1d2e" fontSize="28"/>
                        </condition>  
                        <condition type="==" left="$kcStyle" right="3" executionType="1">
                          <styleBinding marginTop="0" height="32" lineHeight="32" color="#fffbd4" fontSize="28"/>
                        </condition>
                        <condition type="==" left="$kcStyle" right="4" executionType="1">
                          <styleBinding marginTop="40" height="32" lineHeight="32" color="#d3211c" fontSize="28"/>
                        </condition>           
                      </conditions>
