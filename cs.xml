<?xml version="1.0" encoding="utf-8"?>

<ui>
  <view>
    <container>
      <layout type="linearLayout" orientation="vertical" />
      <editProperty>
        <dataDefines>
          <dataDefine name="mkTitleStyle" type="radio" isNull="true" propertyName="★ 文字标题设置">
            <config type="sync">
              <data text="样式1" value="1" defaultSelect="false" />
              <data text="样式2" value="2" defaultSelect="false" />
              <data text="样式3" value="3" defaultSelect="false" />
              <data text="不显示" value="none" defaultSelect="true" />
            </config>
          </dataDefine>
          <dataDefine name="bTitle" type="text" isNull="true" propertyName="大标题" refer="mkTitleStyle:1" />
          <dataDefine name="sTitle" type="text" isNull="true" propertyName="副标题" refer="mkTitleStyle:1" />
          <dataDefine name="moreLink" type="url" isNull="true" propertyName="跳转链接(点击右侧图标选择)" validateType="taokeurl||wirelessurl" refer="mkTitleStyle:1" />
          <dataDefine name="bTitle" type="text" isNull="true" propertyName="大标题" refer="mkTitleStyle:2" />
          <dataDefine name="sTitle" type="text" isNull="true" propertyName="副标题" refer="mkTitleStyle:2" />
          <dataDefine name="moreLink" type="url" isNull="true" propertyName="跳转链接(点击右侧图标选择)" validateType="taokeurl||wirelessurl" refer="mkTitleStyle:2" />
          <dataDefine name="bTitle" type="text" isNull="true" propertyName="大标题" refer="mkTitleStyle:3" />
          <dataDefine name="sTitle" type="text" isNull="true" propertyName="副标题" refer="mkTitleStyle:3" />
          <dataDefine name="moreLink" type="url" isNull="true" propertyName="跳转链接(点击右侧图标选择)" validateType="taokeurl||wirelessurl" refer="mkTitleStyle:3" />


          <dataDefine name="mkTitleImg" type="radio" isNull="true" propertyName="★ 海报图片设置">
            <config type="sync">
              <data text="显示" value="true" defaultSelect="true" />
              <data text="不显示" value="false" defaultSelect="false" />
            </config>
          </dataDefine>
          <dataDefine name="hdImgH" type="text" isNull="true" propertyName="海报图片高度(默认155)" refer="mkTitleImg:true" />
          <dataDefine name="hdImg" type="image" isNull="true" propertyName="海报图片(宽608)" refer="mkTitleImg:true" />
          <dataDefine name="hdImgLink" type="url" isNull="true" propertyName="跳转链接(点击右侧图标选择)" validateType="taokeurl||wirelessurl" refer="mkTitleImg:true" />

          <dataDefine name="isAuto" type="radio" isNull="true" propertyName="★ 宝贝内容设置">
            <config type="sync">
              <data text="自动选择" value="true" defaultSelect="true" />
              <data text="手动选择" value="false" defaultSelect="false" />
            </config>
          </dataDefine>
          <dataDefine name="pageSize" type="select" isNull="true" propertyName="宝贝个数" refer="isAuto:true">
            <config type="sync">
              <data text="3" value="3" defaultSelect="false" />
              <data text="4" value="4" defaultSelect="false" />
              <data text="5" value="5" defaultSelect="false" />
              <data text="6" value="6" defaultSelect="true" />
              <data text="7" value="7" defaultSelect="false" />
              <data text="8" value="8" defaultSelect="false" />
              <data text="9" value="9" defaultSelect="false" />
              <data text="10" value="10" defaultSelect="false" />
              <data text="11" value="11" defaultSelect="false" />
              <data text="12" value="12" defaultSelect="false" />
              <data text="13" value="13" defaultSelect="false" />
              <data text="14" value="14" defaultSelect="false" />
              <data text="15" value="15" defaultSelect="false" />
              <data text="16" value="16" defaultSelect="false" />
              <data text="17" value="17" defaultSelect="false" />
              <data text="18" value="18" defaultSelect="false" />
            </config>
          </dataDefine>
          <dataDefine name="filterPrice" type="price" isNull="true" propertyName="过滤价格" refer="isAuto:true" validateType="price">
            <param name="startPrice" type="text" isNull="true" propertyName="起始价格" refer="isAuto:true" validateType="price" />
            <param name="endPrice" type="text" isNull="true" propertyName="结束价格" refer="isAuto:true" validateType="price" />
          </dataDefine>
          <dataDefine name="keyWord" type="text" isNull="true" propertyName="关键字" refer="isAuto:true" />
          <dataDefine name="sort" type="select" isNull="true" propertyName="排序规则" refer="isAuto:true">
            <config type="sync">
              <data text="上新" value="oldstarts" defaultSelect="true" />
              <data text="销量" value="hotsell" defaultSelect="false" />
              <data text="价格（由低到高）" value="bid" defaultSelect="false" />
            </config>
          </dataDefine>
          <dataDefine name="catId" type="select" isNull="true" propertyName="类目" refer="isAuto:true">
            <config type="async">
              <asyncData url="/decorate/ajax/select/GetShopCategorySelect.do" />
            </config>
          </dataDefine>
          <dataDefine name="itemIds" type="sellerGoods" isNull="false" propertyName="选择宝贝" refer="isAuto:false" validateType="shopItemids" max="18" min="1" />
          <dataDefine name="picSize" type="select" isNull="true" propertyName="图片尺寸选择">
            <config type="sync">
              <data text="大间隙：图片宽188，高188" value="188" defaultSelect="false" />
              <data text="中间隙：图片宽192，高192" value="192" defaultSelect="true" />
              <data text="小间隙：图片宽196，高196" value="196" defaultSelect="false" />
            </config>
          </dataDefine>
          <dataDefine name="picRadius" type="radio" isNull="true" propertyName="图片圆角效果">
            <config type="sync">
              <data text="直角" value="0" defaultSelect="true" />
              <data text="小圆角" value="8" defaultSelect="false" />
              <data text="中圆角" value="16" defaultSelect="false" />
              <data text="大圆角" value="24" defaultSelect="false" />
            </config>
          </dataDefine>
          <dataDefine name="gdInfo" type="radio" isNull="true" propertyName="宝贝图片/标题获取方式">
            <config type="sync">
              <data text="自动获取" value="sq" defaultSelect="true" />
              <data text="自定义图片/标题" value="zk" defaultSelect="false" />
            </config>
          </dataDefine>
          <dataDefine name="picArray" type="jsonArray" min="0" max="18" propertyName="" isNull="true" refer="gdInfo:zk">
            <param name="image" type="image" propertyName="┏ 宝贝图片" isNull="true" />
            <param name="itemTitle" type="text" propertyName="┗ 宝贝标题" isNull="true" />
          </dataDefine>
          <dataDefine name="gdStyle" type="radio" isNull="true" propertyName="自定义宝贝样式">
            <config type="sync">
              <data text="收起设置" value="sq" defaultSelect="true" />
              <data text="展开设置" value="zk" defaultSelect="false" />
            </config>
          </dataDefine>
          <dataDefine name="gdTitle" type="radio" isNull="true" propertyName="【标题】：宝贝标题" refer="gdStyle:zk">
            <config type="sync">
              <data text="显示1行" value="1" defaultSelect="false" />
              <data text="显示2行" value="2" defaultSelect="true" />
              <data text="不显示" value="false" defaultSelect="false" />
            </config>
          </dataDefine>
          <dataDefine name="titleWeight" type="radio" isNull="true" propertyName="是否加粗" refer="gdStyle:zk">
            <config type="sync">
              <data text="加粗" value="700" defaultSelect="false" />
              <data text="不加粗" value="400" defaultSelect="true" />
            </config>
          </dataDefine>
          <dataDefine name="titleColor" type="text" isNull="true" propertyName="宝贝标题颜色，例#000000" refer="gdStyle:zk" />
          <dataDefine name="gdPrice" type="radio" isNull="true" propertyName="【价格】：宝贝价格" refer="gdStyle:zk">
            <config type="sync">
              <data text="显示" value="true" defaultSelect="true" />
              <data text="不显示" value="false" defaultSelect="false" />
            </config>
          </dataDefine>
          <dataDefine name="priceQz" type="text" isNull="true" propertyName="价格前缀(如￥、RMB)" refer="gdStyle:zk" />
          <dataDefine name="priceHz" type="text" isNull="true" propertyName="价格后缀(如起)" refer="gdStyle:zk" />
          <dataDefine name="priceXs" type="radio" isNull="true" propertyName="价格小数" refer="gdStyle:zk">
            <config type="sync">
              <data text="显示" value="true" defaultSelect="true" />
              <data text="不显示" value="false" defaultSelect="false" />
            </config>
          </dataDefine>
          <dataDefine name="priceWeight" type="radio" isNull="true" propertyName="是否加粗" refer="gdStyle:zk">
            <config type="sync">
              <data text="加粗" value="700" defaultSelect="true" />
              <data text="不加粗" value="400" defaultSelect="false" />
            </config>
          </dataDefine>
          <dataDefine name="priceColor" type="text" isNull="true" propertyName="价格颜色，例#000000" refer="gdStyle:zk" />
          <dataDefine name="gdPriceOld" type="radio" isNull="true" propertyName="【原价】：宝贝原价" refer="gdStyle:zk">
            <config type="sync">
              <data text="显示" value="true" defaultSelect="false" />
              <data text="不显示" value="false" defaultSelect="true" />
            </config>
          </dataDefine>
          <dataDefine name="priceOldColor" type="text" isNull="true" propertyName="原价颜色，例#000000" refer="gdStyle:zk" />
          <dataDefine name="gdSale" type="radio" isNull="true" propertyName="【销量】：宝贝销量" refer="gdStyle:zk">
            <config type="sync">
              <data text="显示" value="true" defaultSelect="false" />
              <data text="不显示" value="false" defaultSelect="true" />
            </config>
          </dataDefine>
          <dataDefine name="saleColor" type="text" isNull="true" propertyName="销量颜色，例#000000" refer="gdStyle:zk" />
          <dataDefine name="gdBtn" type="radio" isNull="true" propertyName="【按钮】：宝贝按钮" refer="gdStyle:zk">
            <config type="sync">
              <data text="显示" value="true" defaultSelect="true" />
              <data text="不显示" value="false" defaultSelect="false" />
            </config>
          </dataDefine>
          <dataDefine name="btnImg" type="image" isNull="true" propertyName="按钮图片(宽135，高34)" refer="gdStyle:zk" />

          <dataDefine name="mkType" type="radio" isNull="true" propertyName="★ 模块样式设置">
            <config type="sync">
              <data text="收起设置" value="false" defaultSelect="true" />
              <data text="展开设置" value="true" defaultSelect="false" />
            </config>
          </dataDefine>
          <dataDefine name="mkBg" type="text" isNull="true" propertyName="模块背景颜色，例#000000" refer="mkType:true" />
          <dataDefine name="bColor" type="text" isNull="true" propertyName="模块大标题文字颜色，例#000000" refer="mkType:true" />
          <dataDefine name="sColor" type="text" isNull="true" propertyName="模块副标题文字颜色，例#000000" refer="mkType:true" />
          <dataDefine name="moreName" type="text" isNull="true" propertyName="模块查看更多文字" refer="mkType:true" />
          <dataDefine name="moreColor" type="text" isNull="true" propertyName="模块查看更多颜色，例#000000" refer="mkType:true" />
          <dataDefine name="marginTop" type="text" max="10" contentSize="10" isNull="true" propertyName="模块上间距(默认20)" refer="mkType:true" />
          <dataDefine name="marginBottom" type="text" max="10" contentSize="10" isNull="true" propertyName="模块下间距(默认20)" refer="mkType:true" />
        </dataDefines>
      </editProperty>
      <styleBinding>
        <attribute name="width" value="640" />
        <attribute name="backgroundColor" value="#f5f5f5" />
      </styleBinding>
      <conditions>
        <condition type="!=" left="$mkBg" right="null">
          <styleBinding backgroundColor="$mkBg" />
        </condition>
      </conditions>
      <!-- 数据绑定 -->
      <dataBinding>
        <api apiName="mtop.taobao.geb.enhenced.itemList.get" needLogin="false" apiAlias="itemList">
          <params>
            <param name="pageSize" value="$pageSize" />
            <param name="itemIds" value="$itemIds" />
            <param name="pageSize" value="$pageSize" />
            <param name="auctionTag" value="$auctionTag" />
            <param name="startPrice" value="$filterPrice.startPrice" />
            <param name="endPrice" value="$filterPrice.endPrice" />
            <param name="keyWord" value="$keyWord" />
            <param name="sort" value="$sort" />
            <param name="catId" value="$catId" />
            <param name="pageId" value="$pageId" />
            <param name="ownerId" value="$userId" />
            <param name="isAuto" value="$isAuto" />
            <param name="userType" value="1" />
          </params>
        </api>
      </dataBinding>
      <subViews>
        <!--上间距-->
        <container>
          <layout type="linearLayout" />
          <styleBinding>
            <attribute name="width" value="640" />
            <attribute name="height" value="20" />
          </styleBinding>
          <conditions>
            <condition type="!=" left="$marginTop" right="null" executionType="1">
              <styleBinding height="$marginTop" />
            </condition>
          </conditions>
        </container>
        <!-- 文字标题 -->
        <container>
          <layout type="linearLayout" />
          <styleBinding>
            <attribute name="width" value="608" />
            <attribute name="marginLeft" value="16" />
            <attribute name="marginBottom" value="24" />
          </styleBinding>
          <conditions>
            <condition type="==" left="$mkTitleStyle" right="none" executionType="1">
              <styleBinding width="0" height="0" invisible="true" />
            </condition>
            <condition type="==" left="$mkTitleStyle" right="1" executionType="1">
              <styleBinding marginBottom="16" orientation="horizontal" />
            </condition>
            <condition type="==" left="$mkTitleStyle" right="2" executionType="1">
              <styleBinding justifyContent="center" orientation="horizontal" />
            </condition>
            <condition type="==" left="$mkTitleStyle" right="3" executionType="1">
              <styleBinding alignItems="center" justifyContent="center" />
            </condition>
            <condition type="==" left="$mkTitleImg" right="true" executionType="1">
              <styleBinding marginBottom="16" />
            </condition>
          </conditions>
          <subViews>
            <label value="益智玩具类" lines="1">
              <styleBinding>
                <attribute name="height" value="40" />
                <attribute name="lineHeight" value="40" />
                <attribute name="fontSize" value="36" />
                <attribute name="fontWeight" value="700" />
                <attribute name="color" value="#333333" />
              </styleBinding>
              <conditions>
                <condition type="!=" left="$bTitle" right="null" executionType="1">
                  <dataBinding>
                    <data name="value" value="$bTitle" />
                  </dataBinding>
                </condition>
                <condition type="!=" left="$bColor" right="null" executionType="1">
                  <styleBinding color="$bColor" />
                </condition>
              </conditions>
            </label>
            <label value="动脑动手" lines="1">
              <styleBinding>
                <attribute name="height" value="30" />
                <attribute name="lineHeight" value="34" />
                <attribute name="fontSize" value="24" />
                <attribute name="color" value="#333333" />
              </styleBinding>
              <conditions>
                <condition type="!=" left="$sTitle" right="null" executionType="1">
                  <dataBinding>
                    <data name="value" value="$sTitle" />
                  </dataBinding>
                </condition>
                <condition type="==" left="$mkTitleStyle" right="1" executionType="1">
                  <styleBinding marginLeft="6" height="40" lineHeight="50" />
                </condition>
                <condition type="==" left="$mkTitleStyle" right="2" executionType="1">
                  <styleBinding marginLeft="6" height="40" lineHeight="50" />
                </condition>
                <condition type="!=" left="$sColor" right="null">
                  <styleBinding color="$sColor" />
                </condition>
              </conditions>
            </label>
            <label value="查看更多&gt;" lines="1">
              <styleBinding>
                <attribute name="fontSize" value="20" />
                <attribute name="color" value="#333333" />
                <attribute name="position" value="absolute" />
                <attribute name="right" value="0" />
                <attribute name="lineHeight" value="50" />
              </styleBinding>
              <conditions>
                <condition type="!=" left="$moreName" right="null" executionType="1">
                  <dataBinding>
                    <data name="value" value="$moreName" />
                  </dataBinding>
                </condition>
                <condition type="!=" left="$moreColor" right="null" executionType="1">
                  <styleBinding color="$moreColor" />
                </condition>
                <condition type="!=" left="$mkTitleStyle" right="1" executionType="1">
                  <styleBinding width="0" height="0" invisible="true" />
                </condition>
              </conditions>
            </label>
          </subViews>
          <events>
            <event type="click">
              <actions>
                <userTrack>
                  <utParams>
                    <params>
                      <param name="wp_p" value="1" />
                    </params>
                  </utParams>
                </userTrack>
                <openURL url="$moreLink" />
              </actions>
            </event>
          </events>
        </container>

        <!-- 小海报 -->
        <image url="https://img.alicdn.com/imgextra/i4/800803731/O1CN01JlaFWR1dQqKg2m5VY_!!800803731.png">
          <styleBinding>
            <attribute name="width" value="608" />
            <attribute name="height" value="155" />
            <attribute name="marginBottom" value="20" />
            <attribute name="marginLeft" value="16" />
          </styleBinding>
          <conditions>
            <condition type="!=" left="$hdImg" right="null" executionType="1">
              <dataBinding>
                <data name="url" value="$hdImg" />
              </dataBinding>
            </condition>
            <condition type="!=" left="$hdImgH" right="null" executionType="1">
              <styleBinding height="$hdImgH" />
            </condition>
            <condition type="==" left="$mkTitleImg" right="false" executionType="1">
              <styleBinding width="0" height="0" invisible="true" />
            </condition>
          </conditions>
          <events>
            <event type="click">
              <actions>
                <userTrack utType="Image" utName="image">
                  <utParams>
                    <params>
                      <param name="wp_p" value="1" />
                    </params>
                  </utParams>
                </userTrack>
                <openURL url="$hdImgLink" />
              </actions>
            </event>
          </events>
        </image>

        <grid unScroll="true" gridColumn="3" needDownRefresh="false" needNextPage="false">
          <styleBinding>
            <attribute name="width" value="608" />
            <attribute name="marginLeft" value="16" />
          </styleBinding>
          <!-- 数据绑定 -->
          <dataBinding>
            <api apiAlias="itemList" needLogin="false">
              <params>
                <param name="pageSize" value="$pageSize" />
                <param name="itemIds" value="$itemIds" />
                <param name="pageSize" value="$pageSize" />
                <param name="auctionTag" value="$auctionTag" />
                <param name="startPrice" value="$filterPrice.startPrice" />
                <param name="endPrice" value="$filterPrice.endPrice" />
                <param name="keyWord" value="$keyWord" />
                <param name="sort" value="$sort" />
                <param name="catId" value="$catId" />
                <param name="pageId" value="$pageId" />
                <param name="ownerId" value="$userId" />
                <param name="isAuto" value="$isAuto" />
                <!-- 1代表卖家 -->
                <param name="userType" value="1" />
              </params>
            </api>
          </dataBinding>
          <cell>
            <container>
              <layout type="linearLayout" />
              <styleBinding>
                <attribute name="width" value="192" />
                <attribute name="marginBottom" value="16" />
              </styleBinding>
              <conditions>
                <condition type="==" left="$picSize" right="188" executionType="1">
                  <styleBinding width="188" />
                </condition>
                <condition type="==" left="$picSize" right="196" executionType="1">
                  <styleBinding width="196" />
                </condition>
              </conditions>
              <subViews>
                <!-- 系统图 -->
                <image url="${itemList}.list.[?].imgUrl">
                  <styleBinding>
                    <attribute name="width" value="192" />
                    <attribute name="height" value="192" />
                  </styleBinding>
                  <conditions>
                    <condition type="==" left="$picSize" right="188" executionType="1">
                      <styleBinding width="188" height="188" />
                    </condition>
                    <condition type="==" left="$picSize" right="196" executionType="1">
                      <styleBinding width="196" height="196" />
                    </condition>
                    <condition type="==" left="$picRadius" right="8" executionType="1">
                      <styleBinding borderRadius="8" />
                    </condition>
                    <condition type="==" left="$picRadius" right="16" executionType="1">
                      <styleBinding borderRadius="16" />
                    </condition>
                    <condition type="==" left="$picRadius" right="24" executionType="1">
                      <styleBinding borderRadius="24" />
                    </condition>
                    <condition type="!=" left="$picArray.[?].image" right="null">
                      <dataBinding>
                        <data name="url" value="$picArray.[?].image" />
                      </dataBinding>
                    </condition>
                  </conditions>
                </image>
                <!-- 标题 -->
                <label value="${itemList}.list.[?].title">
                  <styleBinding>
                    <attribute name="height" value="24" />
                    <attribute name="marginTop" value="10" />
                    <attribute name="marginLeft" value="6" />
                    <attribute name="marginRight" value="6" />
                    <attribute name="fontSize" value="20" />
                    <attribute name="color" value="$titleColor" />
                    <attribute name="lines" value="1" />
                    <attribute name="textAlign" value="center" />
                    <attribute name="lineHeight" value="24" />
                  </styleBinding>
                  <conditions>
                    <condition type="!=" left="$picArray.[?].itemTitle" right="null" executionType="1">
                      <dataBinding>
                        <data name="value" value="$picArray.[?].itemTitle" />
                      </dataBinding>
                    </condition>
                    <condition type="==" left="$gdTitle" right="2" executionType="1">
                      <styleBinding height="48" lines="2" />
                    </condition>
                    <condition type="==" left="$gdTitle" right="false" executionType="1">
                      <styleBinding height="0" marginTop="0" />
                    </condition>
                    <condition type="==" left="$titleWeight" right="700" executionType="1">
                      <styleBinding fontWeight="700" />
                    </condition>
                    <condition type="==" left="$titleColor" right="null">
                      <styleBinding color="#555555" />
                    </condition>
                  </conditions>
                </label>
                <!-- 价格 -->
                <container>
                  <layout type="linearLayout" orientation="horizontal" />
                  <styleBinding>
                    <attribute name="height" value="30" />
                    <attribute name="marginTop" value="5" />
                    <attribute name="justifyContent" value="center" />
                  </styleBinding>
                  <conditions>
                    <condition type="==" left="$gdPrice" right="false" executionType="1">
                      <styleBinding width="0" height="0" marginTop="0" invisible="true" />
                    </condition>
                  </conditions>
                  <subViews>
                    <label value="￥">
                      <styleBinding>
                        <attribute name="fontSize" value="16" />
                        <attribute name="color" value="$priceColor" />
                        <attribute name="lineHeight" value="34" />
                      </styleBinding>
                      <conditions>
                        <condition type="!=" left="$priceQz" right="null" executionType="1">
                          <dataBinding>
                            <data name="value" value="$priceQz" />
                          </dataBinding>
                        </condition>
                        <condition type="==" left="$priceWeight" right="700" executionType="1">
                          <styleBinding fontWeight="700" />
                        </condition>
                        <condition type="==" left="$priceColor" right="null">
                          <styleBinding color="#e27866" />
                        </condition>
                      </conditions>
                    </label>
                    <label value="${itemList}.list.[?].priceYuan">
                      <styleBinding>
                        <attribute name="fontSize" value="24" />
                        <attribute name="color" value="$priceColor" />
                        <attribute name="marginLeft" value="-2" />
                        <attribute name="lineHeight" value="30" />
                      </styleBinding>
                      <conditions>
                        <condition type="==" left="$priceColor" right="null" executionType="1">
                          <styleBinding color="#e27866" />
                        </condition>
                        <condition type="==" left="$priceWeight" right="700" executionType="1">
                          <styleBinding fontWeight="700" />
                        </condition>
                      </conditions>
                    </label>
                    <label prefix="." value="${itemList}.list.[?].priceFen">
                      <styleBinding>
                        <attribute name="fontSize" value="20" />
                        <attribute name="color" value="$priceColor" />
                        <attribute name="lineHeight" value="32" />
                      </styleBinding>
                      <conditions>
                        <condition type="==" left="$priceXs" right="false" executionType="1">
                          <styleBinding width="0" height="0" />
                        </condition>
                        <condition type="==" left="$priceColor" right="null" executionType="1">
                          <styleBinding color="#e27866" />
                        </condition>
                        <condition type="==" left="$priceWeight" right="700" executionType="1">
                          <styleBinding fontWeight="700" />
                        </condition>
                      </conditions>
                    </label>
                    <label value="$priceHz">
                      <styleBinding>
                        <attribute name="fontSize" value="16" />
                        <attribute name="color" value="$priceColor" />
                        <attribute name="lineHeight" value="34" />
                      </styleBinding>
                      <conditions>
                        <condition type="==" left="$priceColor" right="null">
                          <styleBinding color="#e27866" />
                        </condition>
                      </conditions>
                    </label>
                    <!-- 原价 -->
                    <label value="${itemList}.list.[?].reservePrice">
                      <styleBinding>
                        <attribute name="height" value="30" />
                        <attribute name="marginLeft" value="10" />
                        <attribute name="fontSize" value="20" />
                        <attribute name="lineHeight" value="34" />
                        <attribute name="color" value="$priceOldColor" />
                        <attribute name="lineColor" value="$priceOldColor" />
                        <attribute name="lineType" value="2" />
                      </styleBinding>
                      <conditions>
                        <condition type="==" left="$priceOldColor" right="null" executionType="1">
                          <styleBinding color="#999999" />
                        </condition>
                        <condition type="==" left="$gdPriceOld" right="false" executionType="1">
                          <styleBinding width="0" height="0" marginTop="0" invisible="true" />
                        </condition>
                      </conditions>
                    </label>
                  </subViews>
                </container>
                <!-- 销量 -->
                <label prefix="已售" value="${itemList}.list.[?].sold30daysQuantity" suffix="件">
                  <styleBinding>
                    <attribute name="marginTop" value="6" />
                    <attribute name="fontSize" value="20" />
                    <attribute name="textAlign" value="center" />
                    <attribute name="lineHeight" value="24" />
                    <attribute name="color" value="$saleColor" />
                  </styleBinding>
                  <conditions>
                    <condition type="==" left="$saleColor" right="null" executionType="1">
                      <styleBinding color="#999999" />
                    </condition>
                    <condition type="==" left="$gdSale" right="false">
                      <styleBinding width="0" height="0" marginTop="0" invisible="true" />
                    </condition>
                  </conditions>
                </label>
                <!-- 按钮 -->
                <image url="https://img.alicdn.com/imgextra/i4/800803731/O1CN01ixoTxZ1dQqKeHgUVS_!!800803731.png">
                  <styleBinding>
                    <attribute name="marginTop" value="5" />
                    <attribute name="width" value="135" />
                    <attribute name="height" value="34" />
                    <attribute name="marginLeft" value="29" />
                  </styleBinding>
                  <conditions>
                    <condition type="!=" left="$btnImg" right="null" executionType="1">
                      <dataBinding>
                        <data name="url" value="$btnImg" />
                      </dataBinding>
                    </condition>
                    <condition type="==" left="$picSize" right="188" executionType="1">
                      <styleBinding marginLeft="27" />
                    </condition>
                    <condition type="==" left="$picSize" right="196" executionType="1">
                      <styleBinding marginLeft="31" />
                    </condition>
                    <condition type="==" left="$gdBtn" right="false" executionType="1">
                      <styleBinding width="0" height="0" marginTop="0" marginLeft="0" invisible="true" />
                    </condition>
                  </conditions>
                </image>
              </subViews>
              <!-- 宝贝链接-->
              <events>
                <event type="click">
                  <actions type="openURL">
                    <userTrack>
                      <utParams>
                        <params>
                          <param name="wp_p" value="${itemList}.list.[?].nid" />
                          <param name="itemId" value="${itemList}.list.[?].nid" />
                        </params>
                      </utParams>
                    </userTrack>
                    <openURL url="${itemList}.list.[?].h5Url" />
                  </actions>
                </event>
              </events>
            </container>
          </cell>
        </grid>

        <!--下间距-->
        <container>
          <layout type="linearLayout" />
          <styleBinding>
            <attribute name="width" value="640" />
            <attribute name="height" value="20" />
          </styleBinding>
          <conditions>
            <condition type="!=" left="$marginBottom" right="null" executionType="1">
              <styleBinding height="$marginBottom" />
            </condition>
          </conditions>
        </container>
      </subViews>
    </container>
  </view>
</ui>