<?xml version="1.0" encoding="utf-8"?>

<ui> 
  <view> 
    <container> 
      <layout type="linearLayout"/>  
      <editProperty> 
        <dataDefines> 
          <dataDefine name="bgImg" type="radio" isNull="true" propertyName="★ 背景大图设置"> 
            <config type="sync"> 
              <data text="显示" value="1" defaultSelect="true"/>  
              <data text="不显示" value="2" defaultSelect="false"/>  
            </config> 
          </dataDefine> 
          <dataDefine name="mkBgImg" type="image" isNull="true" propertyName="模块背景图片(宽640，高250)" refer="bgImg:1"/> 
          <dataDefine name="itemLeft" type="text" isNull="true" propertyName="分类区域左侧距离(默认80)" refer="bgImg:1"/>  

          <dataDefine name="itemArray" type="jsonArray" min="3" max="30" propertyName="★ 分类内容设置" isNull="true"> 
            <param name="title" type="text" isNull="true" propertyName="┏ 分类文字"/> 
            <param name="bg" type="text" isNull="true" propertyName="┣ 背景颜色，例#000000"/>  
            <param name="color" type="text" isNull="true" propertyName="┣ 文字颜色，例#000000"/>  
            <param name="url" type="url" validateType="taokeurl||wirelessurl" isNull="true" propertyName="┗ 跳转链接(点击右侧图标选择)"/>  
          </dataDefine>  
          <dataDefine name="picRadius" type="radio" isNull="true" propertyName="分类圆角效果"> 
            <config type="sync"> 
              <data text="无圆角" value="0" defaultSelect="false"/> 
              <data text="小圆角" value="8" defaultSelect="false"/>  
              <data text="中圆角" value="16" defaultSelect="false"/>  
              <data text="大圆角" value="40" defaultSelect="true"/>  
            </config> 
          </dataDefine>   

          <dataDefine name="mkType" type="radio" isNull="true" propertyName="★ 模块样式设置"> 
            <config type="sync"> 
              <data text="收起设置" value="false" defaultSelect="true"/>  
              <data text="展开设置" value="true" defaultSelect="false"/> 
            </config> 
          </dataDefine>    
          <dataDefine name="moreImg" type="text" isNull="true" propertyName="右侧更多gif动图地址(宽40，高250，请生成短连接)" refer="mkType:true"/>  
          <dataDefine name="mkBg" type="text" isNull="true" propertyName="模块背景颜色，例#000000" refer="mkType:true"/>  
          <dataDefine name="itemBg" type="text" isNull="true" propertyName="分类背景颜色，例#000000" refer="mkType:true"/>  
          <dataDefine name="titleColor" type="text" isNull="true" propertyName="分类文字颜色，例#000000" refer="mkType:true"/>  
          <dataDefine name="weight" type="radio" isNull="true" propertyName="分类文字粗细" refer="mkType:true"> 
            <config type="sync"> 
              <data text="加粗" value="700" defaultSelect="false"/>  
              <data text="不加粗" value="400" defaultSelect="true"/> 
            </config> 
          </dataDefine>  
          <dataDefine name="marginTop" type="text" isNull="true" propertyName="模块上间距(默认10)" refer="mkType:true"/>  
          <dataDefine name="marginBottom" type="text" isNull="true" propertyName="模块下间距(默认10)" refer="mkType:true"/> 
        </dataDefines> 
      </editProperty>  
      <styleBinding> 
        <attribute name="width" value="640"/>  
        <attribute name="backgroundColor" value="#f5f5f5"/> 
      </styleBinding>  
      <conditions> 
        <condition type="!=" left="$mkBg" right="null"> 
          <styleBinding backgroundColor="$mkBg"/> 
        </condition> 
      </conditions>  
