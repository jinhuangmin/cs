<?xml version= "1.0" encoding= "GB2312" ?>
  <ui>
    <view>
      <container>
        <layout type="linearLayout" />
        <styleBinding>
          <attribute name="width" value="750" /> 
          <attribute name="backgroundColor" value="#f5f5f5" />
          <attribute name="paddingTop" value="0"/>
          <attribute name="paddingBottom" value="20"/>
        </styleBinding>
        <conditions>
          <condition type="!=" left="$mkBg" right="null" executionType="1">
            <styleBinding backgroundColor="$mkBg" />
          </condition>
          <condition type="!=" left="$marginTop" right="null" executionType="1">
            <styleBinding paddingTop="$marginTop"/>
          </condition>
          <condition type="!=" left="$marginBottom" right="null" executionType="1">
            <styleBinding paddingBottom="$marginBottom"/>
          </condition>
        </conditions>
        <subViews>
          <!--文字标题-->
          <container>
            <layout type="linearLayout" />
            <styleBinding>
              <attribute name="width" value="750"/>
              <attribute name="paddingBottom" value="10"/>
            </styleBinding>
            <subViews>
              <label value="$bTitle" lines="1">
                <styleBinding>
                  <attribute name="height" value="40"/>
                  <attribute name="width" value="750"/>
                  <attribute name="textAlign" value="center"/>
                  <attribute name="lineHeight" value="40"/>
                  <attribute name="fontSize" value="32"/>
                  <attribute name="color" value="#333333"/>
                  <attribute name="marginTop" value="36"/>
                  <attribute name="fontWeight" value="700"/>
                </styleBinding>
                <conditions>
                  <condition type="!=" left="$hdColor" right="null" executionType="1">
                    <styleBinding color="$hdColor" />
                  </condition>
                  <condition type="!=" left="$hdSize" right="null" executionType="1">
                    <styleBinding fontSize="$hdSize" />
                  </condition>
                </conditions>
              </label>
              <label value="$sTitle" lines="1">
                <styleBinding>
                  <attribute name="height" value="30"/>
                  <attribute name="width" value="750"/>
                  <attribute name="textAlign" value="center"/>
                  <attribute name="lineHeight" value="30"/>
                  <attribute name="fontSize" value="22"/>
                  <attribute name="color" value="#444444"/>
                  <attribute name="marginTop" value="10"/>
                </styleBinding>
                <conditions>
                  <condition type="==" left="$sTitle" right="null" executionType="1">
                    <styleBinding marginTop="0" height="0" />
                  </condition>
                  <condition type="!=" left="$hdColor2" right="null" executionType="1">
                    <styleBinding color="$hdColor2" />
                  </condition>
                </conditions>
              </label>
            </subViews>
          </container>
          <!--内容-->
          <container>
            <layout type="linearLayout" />
            <styleBinding>
              <attribute name="width" value="750" />
            </styleBinding>
            <subViews>
              <!--1行2列-->
              <grid gridColumn="2" unScroll="true" needDownRefresh="false" needNextPage="false" dataSource="$images">
                <styleBinding>
                  <attribute name="width" value="710" />
                  <attribute name="marginLeft" value="20" />
                </styleBinding>
                <array value="$images" />
                <cell>
                  <!--海报-->
                  <container>
                    <layout type="absoluteLayout" />
                    <styleBinding>
                      <attribute name="width" value="345" />
                      <attribute name="height" value="380" />
                      <attribute name="backgroundColor" value="#ffffff" />
                      <attribute name="marginTop" value="20" />
                      <attribute name="marginRigth" value="20" />
                      <attribute name="position" value="relative" />
                    </styleBinding>
                    <conditions>
                      <condition type="!=" left="$ct_bg" right="null">
                        <styleBinding backgroundColor="$ct_bg"/>
                      </condition>
                    </conditions>
                    <subViews>
                      <!--背景图片-->
                      <image url="https://img.alicdn.com/imgextra/i1/800803731/O1CN01cYOWNt1dQqKBREMk6_!!800803731.jpg">
                        <styleBinding>
                          <attribute name="width" value="345" />
                          <attribute name="height" value="190" />
                          <attribute name="position" value="absolute" />
                        </styleBinding>
                        <conditions>
                          <condition type="!=" left="$images.[?].imgBg" right="null">
                            <dataBinding>
                              <data name="url" value="$images.[?].imgBg"/>
                            </dataBinding>
                          </condition>
                        </conditions>
                      </image>
                      <!--图片-->
                      <image url="https://img.alicdn.com/imgextra/i2/800803731/O1CN01QeGX141dQqKH2QNA8_!!800803731.png">
                        <styleBinding>
                          <attribute name="width" value="115" />
                          <attribute name="height" value="130" />
                          <attribute name="marginLeft" value="115" />
                          <attribute name="marginTop" value="120" />
                        </styleBinding>
                        <conditions>
                          <condition type="!=" left="$images.[?].img" right="null">
                            <dataBinding>
                              <data name="url" value="$images.[?].img"/>
                            </dataBinding>
                          </condition>
                        </conditions>
                      </image>
                      <!--标题-->
                      <label value="We are made of pure cotton underwear, we are thousands of cotton selected. Well we will not make use of cotton" lines="4">
                        <styleBinding>
                          <attribute name="width" value="305"/>
                          <attribute name="lineHeight" value="25"/>
                          <attribute name="fontSize" value="17"/>
                          <attribute name="marginTop" value="260"/>
                          <attribute name="marginLeft" value="20" />
                          <attribute name="color" value="#515151"/>
                          <attribute name="textAlign" value="center"/>
                        </styleBinding>
                        <conditions> 
                          <condition type="!=" left="$images.[?].ms" right="null" executionType="1">
                            <dataBinding>
                              <data name="value" value="$images.[?].ms"/>
                            </dataBinding>
                          </condition> 
                          <condition type="!=" left="$iconColor" right="null">
                            <styleBinding color="$iconColor"/>
                          </condition>
                        </conditions>
                      </label>

                    </subViews>
                    <events>
                      <event type="click">
                        <actions>
                          <userTrack utType="Image" utName="image">
                            <utParams>
                              <params>
                                <param name="wp_app" value="weapp" />
                                <param name="wp_p" value="$wp_pk" />
                                <param name="wp_m" value="MODULE_KEY_PLACE_HOLDER" />
                              </params>
                            </utParams>
                          </userTrack>
                          <openURL url="$images.[?].url">
                            <params>
                              <param name="wp_app" value="weapp" />
                              <param name="wp_pk" value="$wp_pk" />
                              <param name="wp_m" value="MODULE_KEY_PLACE_HOLDER" />
                            </params>
                          </openURL>
                        </actions>
                      </event>
                    </events>
                  </container>

                </cell>
              </grid>
            </subViews>
          </container>

        </subViews>
      </container>
    </view>
  </ui>